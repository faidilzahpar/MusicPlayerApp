    <Window
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MusicPlayerApp.Views.MainWindow"
            Title="Music Player"
            Height="750" Width="1200"
            Background="#1F2945"
            xmlns:local="clr-namespace:MusicPlayerApp"
            WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#6F7A95"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                            CornerRadius="8" 
                            Padding="15 0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.ColumnSpan="2" 
                                              VerticalAlignment="Center" 
                                              HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1F2940"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MusicListItemStyle" TargetType="{x:Type ListViewItem}">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="0 4"/>
                <Setter Property="Background" Value="#2A3550"/>
                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#36405F"/>
                    </Trigger>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#3E4C6E"/>
                        <Setter Property="BorderBrush" Value="#5CD1FF"/>
                        <Setter Property="BorderThickness" Value="2,0,0,0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ModernSliderThumbStyle" TargetType="{x:Type Thumb}">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Thumb}">
                            <Ellipse Width="12" Height="12" Fill="White" StrokeThickness="0"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ModernSliderStyle" TargetType="{x:Type Slider}">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Slider}">
                            <Grid VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border x:Name="TrackBackground"
                                    Height="4" 
                                    CornerRadius="2" 
                                    Background="#3E4C6E" 
                                    VerticalAlignment="Center"/>

                                <Track x:Name="PART_Track">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Command="{x:Static Slider.DecreaseLarge}">
                                            <RepeatButton.Template>
                                                <ControlTemplate TargetType="{x:Type RepeatButton}">
                                                    <Border Height="4" CornerRadius="2" Background="#5CD1FF" />
                                                </ControlTemplate>
                                            </RepeatButton.Template>
                                        </RepeatButton>
                                    </Track.DecreaseRepeatButton>

                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ModernSliderThumbStyle}" 
                                           VerticalAlignment="Center"/>
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="IconButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="PlayButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="Background" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}" Width="50" Height="50">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E0E0E0"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
            <Setter Property="Foreground" Value="#5CD1FF" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="12" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="GridRoot" Width="12" Background="{TemplateBinding Background}">

                            <Track x:Name="PART_Track" IsDirectionReversed="true" Focusable="false">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Style>
                                            <Style TargetType="{x:Type Thumb}">
                                                <Setter Property="OverridesDefaultStyle" Value="True"/>
                                                <Setter Property="IsTabStop" Value="False"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Border x:Name="ThumbVisual" 
                                                            CornerRadius="4" 
                                                            Background="#4A5675" 
                                                            Width="6" 
                                                            Margin="0 2"
                                                            HorizontalAlignment="Center"/>

                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter TargetName="ThumbVisual" Property="Background" Value="#6F7A95"/>
                                                                </Trigger>
                                                                <Trigger Property="IsDragging" Value="True">
                                                                    <Setter TargetName="ThumbVisual" Property="Background" Value="#5CD1FF"/>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Thumb.Style>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QueueToggleButtonStyle" TargetType="{x:Type ToggleButton}">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="#AEB7D3"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" Padding="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#2A3550"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#5CD1FF"/>
                                    <Setter Property="Foreground" Value="#1B2338"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Storyboard x:Key="OpenQueueAnimation">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="QueueDrawer" Storyboard.TargetProperty="Visibility">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimation Storyboard.TargetName="QueueDrawerTransform" 
                         Storyboard.TargetProperty="Y" 
                         From="400" To="0" Duration="0:0:0.3" 
                         DecelerationRatio="0.5"/>
            </Storyboard>

            <Storyboard x:Key="CloseQueueAnimation">
                <DoubleAnimation Storyboard.TargetName="QueueDrawerTransform" 
                         Storyboard.TargetProperty="Y" 
                         From="0" To="400" Duration="0:0:0.3" 
                         AccelerationRatio="0.5"/>
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="QueueDrawer" Storyboard.TargetProperty="Visibility" BeginTime="0:0:0.3">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                </ObjectAnimationUsingKeyFrames>
            </Storyboard>
        </Window.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#1B2338">
                <StackPanel Margin="20 30 20 20">

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 30">
                        <Border Width="32" Height="32" CornerRadius="8" Background="#5CD1FF" Margin="0 0 10 0">
                            <TextBlock Text="♫" Foreground="#1B2338" FontWeight="Bold" 
                               FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="MyMusic" FontSize="22" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="MENU" Foreground="#6F7A95" FontSize="11" FontWeight="Bold" Margin="10 0 0 10"/>

                    <StackPanel Grid.Row="0" Margin="0 0 0 10">
                        <Border Background="#2A3550" CornerRadius="20" Padding="15 8" Width="220" HorizontalAlignment="Left">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="🔍" Foreground="#AEB7D3" VerticalAlignment="Center" Margin="0 0 10 0"/>
                                <TextBox x:Name="SearchBox" Grid.Column="1" Background="Transparent" BorderThickness="0" 
                         Foreground="White" FontSize="14" CaretBrush="White" VerticalContentAlignment="Center"
                         TextChanged="SearchBox_TextChanged" Tag="Search songs..."/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <Button x:Name="BtnDiscover" Click="Filter_Click" Tag="Discover" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔥" Margin="0 0 15 0"/>
                            <TextBlock Text="Discover"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnSongs" Click="Filter_Click" Tag="Songs" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎵" Margin="0 0 15 0"/>
                            <TextBlock Text="Songs"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnAlbums" Click="Filter_Click" Tag="Albums" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💿" Margin="0 0 15 0"/>
                            <TextBlock Text="Albums"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnArtists" Click="Filter_Click" Tag="Artist" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎤" Margin="0 0 15 0"/>
                            <TextBlock Text="Artists"/>
                        </StackPanel>
                    </Button>

                <Button x:Name="BtnLiked" Click="Filter_Click" Tag="Liked" Style="{StaticResource SidebarButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❤️" Margin="0 0 15 0"/>
                        <TextBlock Text="Liked Songs"/>
                    </StackPanel>
                </Button>

                <Border Height="1" Background="#2A3550" Margin="0 20"/>

                    <TextBlock Text="YOUR LIBRARY" Foreground="#6F7A95" FontSize="11" FontWeight="Bold" Margin="10 0 0 10"/>

                    <Button Click="Playlists_Click" Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📜" Margin="0 0 15 0"/>
                            <TextBlock Text="Playlists"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnDefaultLibrary" 
            Click="DefaultLibrary_Click" 
            Style="{StaticResource SidebarButtonStyle}" 
            ToolTip="Default Windows Music Folder">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📁" Margin="0 0 15 0"/>
                            <TextBlock Text="Music (Default)"/>
                        </StackPanel>
                    </Button>

                    <ItemsControl x:Name="FolderListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Style="{StaticResource SidebarButtonStyle}" 
                        Click="DynamicFolder_Click" 
                        Tag="{Binding Path}" 
                        ToolTip="{Binding Path}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="📂" Margin="0 0 15 0"/>
                                        <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Click="AddFolder_Click" Margin="0 10 0 0">
                        <Button.Template>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="Transparent" BorderBrush="#2A3550" BorderThickness="1" 
                                CornerRadius="8" Height="40" Cursor="Hand">
                                    <VisualStateManager.VisualStateGroups>
                                        <VisualStateGroup x:Name="CommonStates">
                                            <VisualState x:Name="Normal"/>
                                            <VisualState x:Name="MouseOver">
                                                <Storyboard>
                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#1F2940" Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateManager.VisualStateGroups>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="➕" Foreground="#5CD1FF" Margin="0 0 10 0"/>
                                        <TextBlock Text="Add Folder" Foreground="#5CD1FF" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid x:Name="PlaylistIndexView"
          Grid.Row="0"
          Margin="30 25 30 0"
          Visibility="Collapsed">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                   Text="Playlists"
                   FontSize="32"
                   Foreground="White"
                   FontWeight="Bold"
                   Margin="0 0 0 15">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.5" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>

                    <Button Grid.Row="1"
                Content="+ New Playlist"
                Width="160" Height="40"
                HorizontalAlignment="Left"
                Background="#5CD1FF" Foreground="#1B2338"
                BorderThickness="0" FontWeight="Bold" FontSize="14"
                Cursor="Hand" Margin="0 0 0 25"
                Click="CreatePlaylist_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="20"/>
                            </Style>
                        </Button.Resources>
                        <Button.Effect>
                            <DropShadowEffect Color="#5CD1FF" BlurRadius="15" Opacity="0.3" ShadowDepth="0"/>
                        </Button.Effect>
                    </Button>

                    <ScrollViewer Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="0 0 0 10">

                        <ItemsControl x:Name="PlaylistList">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Width="220" Margin="0 0 30 30"
                                    Cursor="Hand" Background="Transparent"
                                    MouseLeftButtonUp="PlaylistItem_Click"
                                    Tag="{Binding Id}">
                                        <Border Height="220" CornerRadius="12" Margin="0 0 0 12">
                                            <Border.Effect>
                                                <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.4" ShadowDepth="4"/>
                                            </Border.Effect>

                                            <Grid>
                                                <Rectangle RadiusX="12" RadiusY="12">
                                                    <Rectangle.Fill>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop Color="#2A3550" Offset="0"/>
                                                            <GradientStop Color="#161B2E" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <Path Data="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2zM17 6v8.18c-.31-.11-.65-.18-1-.18-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3V6h-2z"
                                          Fill="#3E4C6E" Stretch="Uniform" Width="60" Height="60"
                                          HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <Path.Effect>
                                                        <DropShadowEffect Color="#5CD1FF" BlurRadius="5" Opacity="0.2" ShadowDepth="0"/>
                                                    </Path.Effect>
                                                </Path>
                                            </Grid>
                                        </Border>

                                        <TextBlock Text="{Binding Name}" Foreground="White" FontSize="16" FontWeight="Bold"
                                       TextTrimming="CharacterEllipsis" Margin="4 0"/>

                                        <TextBlock Text="{Binding SongCount}" Foreground="#6F7A95" FontSize="13" Margin="4 2 0 0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>

                <Grid x:Name="PlaylistDetailView"
          Grid.Row="0"
          Margin="30 25 30 0"
          Visibility="Collapsed">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Background="#242E47" CornerRadius="16" Padding="30" Margin="0 0 0 25">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.25" ShadowDepth="2"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="180" Height="180" CornerRadius="10" Margin="0 0 30 0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5" ShadowDepth="2"/>
                                </Border.Effect>
                                <Grid>
                                    <Rectangle RadiusX="10" RadiusY="10">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#3E4C6E" Offset="0"/>
                                                <GradientStop Color="#1B2338" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    <Path Data="M15 6H3v2h12V6zm0 4H3v2h12v-2zM3 16h8v-2H3v2zM17 6v8.18c-.31-.11-.65-.18-1-.18-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3V6h-2z"
                              Fill="#2A3550" Stretch="Uniform" Width="70" Height="70"
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                                <TextBlock Text="PLAYLIST" Foreground="#5CD1FF" FontSize="12" FontWeight="Bold" Margin="2 0 0 5"/>

                                <TextBlock x:Name="PlaylistTitle"
                               Text="Nama Playlist"
                               FontSize="42" FontWeight="Bold" Foreground="White"
                               TextWrapping="Wrap" LineHeight="46"
                               Margin="0 0 0 10"/>

                            <TextBlock x:Name="PlaylistCount"
                               Text="0 songs"
                               FontSize="14" Foreground="#AEB7D3"
                               Margin="2 0 0 25"/>
                                
                            <StackPanel Orientation="Horizontal">

                                <Button x:Name="BtnPlayAll"
            Width="50" Height="50"
            Margin="0 0 15 0"
            Background="#5CD1FF" 
            BorderThickness="0"
            Cursor="Hand" 
            Click="BtnPlayAll_Click"
            ToolTip="Play All">
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Grid>
                                                <Ellipse Fill="{TemplateBinding Background}" Width="50" Height="50">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                                <Path Data="M8 5v14l11-7z" 
                          Fill="#1B2338" 
                          Stretch="Uniform" 
                          Width="20" Height="20" 
                          Margin="4,0,0,0"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#8FE0FF"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#4AB6E0"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <ToggleButton x:Name="BtnShufflePlaylist"
            Width="50" Height="50"
            Margin="0 0 15 0"
            Background="#1B2338"
            BorderThickness="0" 
            Cursor="Hand"
            Click="BtnShufflePlaylist_Click"
            ToolTip="Shuffle Play">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                                            <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="25" 
                        Width="50" Height="50">
                                                <Border.Effect>
                                                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="Black"/>
                                                </Border.Effect>
                                                <Path x:Name="Icon" 
                          Data="M10.59 9.17L5.41 4 4 5.41l5.17 5.17 1.42-1.41zM14.5 4l2.04 2.04L4 18.59 5.41 20 17.96 7.46 20 9.5V4h-5.5zm.33 9.41l-1.41 1.41 3.13 3.13L14.5 20H20v-5.5l-2.04 2.04-3.13-3.13z"
                          Fill="#5CD1FF"
                          Stretch="Uniform"
                          Width="22" Height="22"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#2A3550"/>
                                                </Trigger>

                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#5CD1FF"/>
                                                    <Setter TargetName="Icon" Property="Fill" Value="#1B2338"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <Button Content="+ Add Songs" x:Name="BtnAddSongs"
            Padding="20 0" Height="50" Margin="0 0 12 0"
            Background="#1B2338" Foreground="White"
            BorderThickness="0" FontWeight="SemiBold"
            Cursor="Hand" Click="BtnAddSongs_Click">
                                    <Button.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="25"/>
                                        </Style>
                                    </Button.Resources>
                                    <Button.Template>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="25" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#3E4C6E"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <Button x:Name="BtnRename"
            Margin="0 0 12 0" Cursor="Hand" Click="BtnRename_Click"
            Foreground="White" Height="50"
