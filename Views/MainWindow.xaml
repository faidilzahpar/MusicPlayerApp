                                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                                        <Setter Property="FontSize" Value="13"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type MenuItem}">
                                                                    <Border x:Name="Border" Padding="12,6" Background="Transparent">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="20"/>
                                                                                <ColumnDefinition Width="10"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <ContentPresenter Grid.Column="0" ContentSource="Icon" HorizontalAlignment="Center" VerticalAlignment="Center" Width="16" Height="16"/>
                                                                            <ContentPresenter Grid.Column="2" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                                                            <Path x:Name="RightArrow" Grid.Column="3" Data="M0,0 L4,3.5 L0,7 Z" Fill="#AEB7D3" Margin="10,0,0,0" VerticalAlignment="Center" Visibility="Collapsed"/>

                                                                            <Popup x:Name="PART_Popup" AllowsTransparency="True" Focusable="False" 
             HorizontalOffset="2" VerticalOffset="-4"
             IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}" 
             Placement="Right">
                                                                                <Border Background="#1F2940" BorderThickness="1" BorderBrush="#3E4C6E" CornerRadius="8" Padding="2">
                                                                                    <ScrollViewer CanContentScroll="True" MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                                                                    </ScrollViewer>
                                                                                </Border>
                                                                            </Popup>
                                                                        </Grid>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsHighlighted" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#3E4C6E"/>
                                                                            <Setter Property="Foreground" Value="White"/>
                                                                        </Trigger>
                                                                        <Trigger Property="Role" Value="SubmenuHeader">
                                                                            <Setter TargetName="RightArrow" Property="Visibility" Value="Visible"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>

                                                    <Style x:Key="PlainMenuItemStyle" TargetType="{x:Type MenuItem}">
                                                        <Setter Property="Foreground" Value="#E0E0E0"/>
                                                        <Setter Property="FontSize" Value="13"/>
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                        <Setter Property="Cursor" Value="Hand"/>
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type MenuItem}">
                                                                    <Border x:Name="Border" Padding="12,8" Background="Transparent">
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="Auto"/>
                                                                            </Grid.ColumnDefinitions>

                                                                            <ContentPresenter Grid.Column="0" ContentSource="Header" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                                                            <Path x:Name="RightArrow" Grid.Column="1" Data="M0,0 L4,3.5 L0,7 Z" Fill="#AEB7D3" Margin="10,0,0,0" VerticalAlignment="Center" Visibility="Collapsed"/>
                                                                        </Grid>
                                                                    </Border>
                                                                    <ControlTemplate.Triggers>
                                                                        <Trigger Property="IsHighlighted" Value="True">
                                                                            <Setter TargetName="Border" Property="Background" Value="#3E4C6E"/>
                                                                            <Setter Property="Foreground" Value="White"/>
                                                                        </Trigger>
                                                                    </ControlTemplate.Triggers>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>

                                                    <Style TargetType="{x:Type Separator}">
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type Separator}">
                                                                    <Border Height="1" Background="#3E4C6E" Margin="0,6"/>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>

                                                    <Style TargetType="{x:Type ContextMenu}">
                                                        <Setter Property="HasDropShadow" Value="True" />
                                                        <Setter Property="Template">
                                                            <Setter.Value>
                                                                <ControlTemplate TargetType="{x:Type ContextMenu}">
                                                                    <Border Background="#1F2940" BorderThickness="1" BorderBrush="#3E4C6E" CornerRadius="8" Padding="0,4">
                                                                        <Border.Effect>
                                                                            <DropShadowEffect BlurRadius="12" Color="Black" Opacity="0.5" ShadowDepth="4"/>
                                                                        </Border.Effect>
                                                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </ContextMenu.Resources>

                                                <MenuItem Header="Save to Liked Songs" Click="Context_ToggleLike_Click">
                                                    <MenuItem.Icon>
                                                        <Path Data="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" 
Fill="White" Stretch="Uniform" Width="14" Height="14"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>

                                                <MenuItem Header="Add to playlist" x:Name="MenuAddToPlaylist">
                                                    <MenuItem.Icon>
                                                        <Path Data="M14 10H2v2h12v-2zm0-4H2v2h12V6zm4 8v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zM2 16h8v-2H2v2z" 
Fill="White" Stretch="Uniform" Width="14" Height="14"/>
                                                    </MenuItem.Icon>

                                                    <MenuItem Header="Loading..."/>
                                                </MenuItem>

                                            </ContextMenu>
                                        </Button.ContextMenu>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    </Grid>

                </Grid>
                <Border x:Name="QueueDrawer" Grid.Row="0" Grid.RowSpan="2"
            Background="#1F2940"
            VerticalAlignment="Bottom" 
            Height="400" 
            Margin="0 0 0 85" 
            CornerRadius="16 16 0 0"
            Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="20" Color="Black" Opacity="0.5" Direction="90"/>
                    </Border.Effect>

                    <Border.RenderTransform>
                        <TranslateTransform x:Name="QueueDrawerTransform" Y="400"/>
                    </Border.RenderTransform>

                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0 0 0 15">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Now Playing" Foreground="#5CD1FF" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                                <TextBlock Text=" • Next Up" Foreground="#6F7A95" FontSize="16" VerticalAlignment="Center" Margin="5 0"/>
                            </StackPanel>

                            <Button HorizontalAlignment="Right" Content="Clear" Foreground="#FF5C5C" 
                        Style="{StaticResource IconButtonStyle}" FontWeight="Bold" FontSize="12"
                        Click="BtnClearQueue_Click"/>
                        </Grid>

                    <ListView Grid.Row="1" x:Name="QueueList"
              VirtualizingPanel.ScrollUnit="Pixel"
              Background="Transparent" BorderThickness="0"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ItemContainerStyle="{StaticResource MusicListItemStyle}"
          
              ItemsSource="{Binding Source={x:Static local:App.Music}, Path=CurrentQueue}"
          
              AllowDrop="True"
              PreviewMouseLeftButtonDown="QueueList_PreviewMouseLeftButtonDown"
              PreviewMouseMove="QueueList_PreviewMouseMove"
              Drop="QueueList_Drop"
              MouseDoubleClick="QueueList_MouseDoubleClick">

                        <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0 6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="≡" Grid.Column="0" Foreground="#586380" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" 
                                       Cursor="SizeNS" FontSize="16"/>

                                        <TextBlock Text="{Binding Title}" Grid.Column="1" 
                                       Foreground="White" FontSize="14" FontWeight="SemiBold" 
                                       TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{Binding Artist}" Grid.Column="2" 
                                       Foreground="#AEB7D3" FontSize="13" 
                                       TextTrimming="CharacterEllipsis"/>

                                        <TextBlock Text="{Binding DurationFormatted}" Grid.Column="3" 
                                       HorizontalAlignment="Right" Foreground="#6F7A95" 
                                       FontSize="13"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <Grid Grid.Row="1" Background="#151C30" Height="85" VerticalAlignment="Bottom">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <Slider x:Name="ProgressSlider"
                            Grid.Row="0" Grid.ColumnSpan="3"
                            Style="{StaticResource ModernSliderStyle}" 
                            Minimum="0" Maximum="100" Value="0"
                            Cursor="Hand" IsMoveToPointEnabled="True"
                            VerticalAlignment="Top" Margin="-5 -5 -5 0" Height="16"
                            PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseDown"
                            PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseUp"
                            MouseMove="ProgressSlider_MouseMove"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="20 0" VerticalAlignment="Center">
                        <Ellipse x:Name="AlbumArtContainer" Width="45" Height="45" Fill="#2A3550">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.4" ShadowDepth="2"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <StackPanel Margin="12 0" VerticalAlignment="Center">
                            <TextBlock Text="Judul Lagu" Foreground="White" FontWeight="SemiBold" FontSize="14" x:Name="CurrentSongTitle" TextTrimming="CharacterEllipsis" MaxWidth="160"/>
                            <TextBlock Text="Nama Artis" Foreground="#AEB7D3" FontSize="12" Margin="0 2 0 0" x:Name="CurrentSongArtist" TextTrimming="CharacterEllipsis" MaxWidth="160"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Margin="15 0" Click="Prev_Click" ToolTip="Previous">
                            <Path Data="M 12,0 L 12,14 L 0,7 Z M 0,0 L 3,0 L 3,14 L 0,14 Z" Fill="#AEB7D3" Stretch="Uniform" Height="14" Width="14"/>
                        </Button>

                        <Button x:Name="PlayButton" Style="{StaticResource PlayButtonStyle}" Margin="10 0" Click="PlayPause_Click" ToolTip="Play/Pause">
                            <Path x:Name="PlayIcon" Data="M 0,0 L 16,9 L 0,18 Z" Fill="#2A3550" Stretch="Uniform" Height="20" Width="20" Margin="4,0,0,0"/>
                        </Button>

                        <Button Style="{StaticResource IconButtonStyle}" Width="35" Height="35" Margin="15 0" Click="Next_Click" ToolTip="Next">
                            <Path Data="M 0,0 L 0,14 L 12,7 Z M 12,0 L 15,0 L 15,14 L 12,14 Z" Fill="#AEB7D3" Stretch="Uniform" Height="14" Width="14"/>
                        </Button>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 20 0">

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0 0 15 0">
                            <TextBlock x:Name="CurrentTimeText" Text="0:00" Foreground="#AEB7D3" FontSize="12" FontWeight="Medium"/>
                            <TextBlock Text=" / " Foreground="#586380" FontSize="12" Margin="5 0"/>
                            <TextBlock x:Name="TotalTimeText" Text="0:00" Foreground="#AEB7D3" FontSize="12" FontWeight="Medium"/>
                        </StackPanel>

                        <ToggleButton x:Name="BtnOpenQueue" Click="BtnOpenQueue_Click"
                      Style="{StaticResource QueueToggleButtonStyle}" 
                      Width="40" Height="40" ToolTip="Playing Queue">
                            <Path Data="M3 6h18v2H3V6zm0 5h18v2H3v-2zm0 5h18v2H3v-2z" 
                  Fill="{Binding RelativeSource={RelativeSource AncestorType=ToggleButton}, Path=Foreground}" 
                  Stretch="Uniform" Width="18" Height="18"/>
                        </ToggleButton>

                    </StackPanel>

                </Grid>
            </Grid>
        </Grid>
    </Window>