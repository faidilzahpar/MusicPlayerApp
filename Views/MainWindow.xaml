<Window x:Class="MusicPlayerApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Music Player"
        Height="750" Width="1200"
        Background="#1F2945"
        WindowStartupLocation="CenterScreen">

    <!-- ========= RESOURCES (STYLE) ========= -->
    <Window.Resources>

        <!-- Style tombol di sidebar -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0 3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"
                                              Margin="10 0 0 0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A3550"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style item list lagu -->
        <Style x:Key="MusicListItemStyle" TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0 4"/>
            <Setter Property="Background" Value="#2A3550"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#36405F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <!-- ========= LAYOUT UTAMA ========= -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <!-- Sidebar -->
            <ColumnDefinition/>
            <!-- Konten utama -->
        </Grid.ColumnDefinitions>

        <!-- ========== SIDEBAR ========== -->
        <Border Grid.Column="0" Background="#1B2338">
            <StackPanel Margin="20">
                <!-- Judul / Nama user -->
                <TextBlock Text="Rihanna"
                           FontSize="22"
                           Foreground="White"
                           FontWeight="Bold"
                           Margin="0 10"/>

                <!-- BROWSE -->
                <TextBlock Text="Browse"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 20 0 5"/>

                <Button Content="Discover"   Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Songs"      Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Top charts" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Artist"     Style="{StaticResource SidebarButtonStyle}" />

                <!-- PLAYLIST -->
                <TextBlock Text="Playlist"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 25 0 5"/>

                <Button Content="Favourite" Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Recent"    Style="{StaticResource SidebarButtonStyle}" />

                <!-- MY MUSIC -->
                <TextBlock Text="My music"
                           Foreground="#6F7A95"
                           FontSize="12"
                           Margin="0 25 0 5"/>

                <Button Content="High is hope"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Shape of you"  Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="All we know"   Style="{StaticResource SidebarButtonStyle}" />
                <Button Content="Import Lagu dari Folder" Width="200" Height="40" Click="ImportSongs_Click"/>
            </StackPanel>
        </Border>

        <!-- ========== KONTEN UTAMA ========== -->
        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header -->
                <RowDefinition Height="220"/>
                <!-- New releases -->
                <RowDefinition Height="Auto"/>
                <!-- Title "New played" -->
                <RowDefinition/>
                <!-- List lagu -->
                <RowDefinition Height="70"/>
                <!-- Bottom player -->
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0 0 0 20">
                <TextBlock Text="Search Music" 
                   FontSize="24" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0 0 0 15"/>

                <Border Background="#2A3550" 
                    CornerRadius="20" 
                    Padding="15 8" 
                    Width="400" 
                    HorizontalAlignment="Left"> 

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="🔍" 
                       Foreground="#AEB7D3" 
                       VerticalAlignment="Center" 
                       Margin="0 0 10 0"/>

                        <TextBox x:Name="SearchBox"
                     Grid.Column="1"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="14"
                     CaretBrush="White"
                     VerticalContentAlignment="Center"
                     TextChanged="SearchBox_TextChanged" 
                     Tag="Search songs or artists..."/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- NEW RELEASES + FOTO ARTIS -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="320"/>
                </Grid.ColumnDefinitions>

                <!-- New Releases -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="New Songs Added"
                               FontSize="20"
                               Foreground="White"
                               Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal">
                        <!-- Kartu dummy -->
                        <Border Width="120" Height="150" Margin="0 0 10 0"
                                Background="#2A3550" CornerRadius="15">
                            <StackPanel VerticalAlignment="Bottom" Margin="10" >
                                <TextBlock Text="Rihanna" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Text="Singer"  Foreground="#AEB7D3" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <Border Width="120" Height="150" Margin="0 0 10 0"
                                Background="#2A3550" CornerRadius="15"/>

                        <Border Width="120" Height="150"
                                Background="#2A3550" CornerRadius="15"/>
                    </StackPanel>
                </StackPanel>

                <!-- Foto artis besar (dummy) -->
                <Border Grid.Column="1"
                        Background="#2A3550"
                        CornerRadius="25"
                        Margin="20 0 0 0">
                    <TextBlock Text="Artist Image"
                               Foreground="#AEB7D3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- Title New Played -->
            <TextBlock Grid.Row="2"
                       Text="New played"
                       FontSize="20"
                       Foreground="White"
                       Margin="0 20 0 10"/>

            <!-- List Lagu -->
            <ListView Grid.Row="3"
          x:Name="NewPlayedList"
          Background="Transparent"
          BorderThickness="0"
          ItemContainerStyle="{StaticResource MusicListItemStyle}"
          MouseDoubleClick="NewPlayedList_MouseDoubleClick">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="▶" Grid.Column="0" VerticalAlignment="Center"/>

                            <TextBlock Text="{Binding Title}" Grid.Column="1" Foreground="White"/>
                            <TextBlock Text="{Binding Artist}" Grid.Column="2" Foreground="#AEB7D3"/>

                            <TextBlock Text="{Binding DurationFormatted}"
                           Grid.Column="3"
                           HorizontalAlignment="Right"
                           Foreground="#AEB7D3"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>

            </ListView>


            <!-- BOTTOM MINI PLAYER -->
            <Grid Grid.Row="4" Background="#151C30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <!-- Info lagu -->
                <StackPanel Orientation="Horizontal" Margin="20 0" VerticalAlignment="Center">
                    <Ellipse x:Name="AlbumArtContainer" Width="40" Height="40">
                        <Ellipse.Fill>
                            <SolidColorBrush Color="#2A3550"/>
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Margin="10 0">
                        <TextBlock Text="Judul Lagu" Foreground="White" x:Name="CurrentSongTitle"/>
                        <TextBlock Text="Nama Artis" Foreground="#AEB7D3" FontSize="11" x:Name="CurrentSongArtist"/>
                    </StackPanel>
                </StackPanel>

                <!-- Slider progress -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <Slider x:Name="ProgressSlider"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        Margin="0 0 0 4"
                        PreviewMouseLeftButtonDown="ProgressSlider_PreviewMouseDown"
                        PreviewMouseLeftButtonUp="ProgressSlider_PreviewMouseUp"
                        MouseMove="ProgressSlider_MouseMove"
                        IsMoveToPointEnabled="True" />
                    <Grid Margin="0 0 10 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <!-- Current time -->
                        <TextBlock x:Name="CurrentTimeText"
                           Text="0:00"
                           Foreground="#AEB7D3"
                           FontSize="11"
                           Grid.Column="0"
                           HorizontalAlignment="Left"/> 

                        <!-- Total duration -->
                        <TextBlock x:Name="TotalTimeText"
                           Text="0:00"
                           Foreground="#AEB7D3"
                           FontSize="11"
                           Grid.Column="1"
                           HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <!-- Tombol kontrol -->
                <StackPanel Grid.Column="2" Orientation="Horizontal"
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="⏮" Width="30" Height="30" Margin="4" Click="Prev_Click"/>
                    <Button Content="⏯" Width="30" Height="30" Margin="4" Click="PlayPause_Click"/>
                    <Button Content="⏭" Width="30" Height="30" Margin="4" Click="Next_Click"/>
                </StackPanel>
            </Grid>

        </Grid>
    </Grid>
</Window>
